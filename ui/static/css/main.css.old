* {
  margin: 0;
  padding: 0;

  box-sizing: border-box;
  font-size: 14px;
  font-family: monospace;
  
  text-align: center;
}

body {
  margin: auto;
  padding: 30px;
  background-color: #111111;
  color: #E6E6E6;
}

strong {
  font-weight: bold;  
}

label {
  background-color: #0A0A0A;
}

a {
  text-decoration: none;
  color: #90cfff;
}

td {
  padding: 0 10px;
}

button {
  border-bottom-style: 2px solid black;
}

img {
  margin-right: 10px;
  margin-left: 10px;
  float: left;

  box-shadow: 2px 2px #90cfff;
  border-right: solid 5px #232433;
  border-bottom: solid 5px #232433;
}

#subject {
  color: #9090FF;

}

#header {
  padding: 10px 0;
}

main {
  display: inline-block;
  margin: auto;
}

.thread {
  text-align: justify;
  background-color: #d9c2b8;
  padding: 16px;
  margin: 16px;
  background-color: #232433;
  display: inline-block;
  
  border: #5e6080 solid 2px;
}

.title {
  margin-bottom: 20px;
}

input[type=submit] {
  width: 60px;
  height: 20px;
  border: 5px;
  border-color: black;
}

input[type=submit]:hover {
  background: #8C82FC;
  color: white;
}

input[type=file] {
  max-width: 250px;
}
